@{
    Layout = null;
}
<style>
    body {
        margin: 0px;
        padding: 0px;
    }

    div {
        padding: 20px 20px;
        position: absolute;
        top: 5%;
        left: 25%;
        right: 25%;
        bottom: 10%;
        background-color: rgba(255, 255, 255, 0.662);
        border-radius: 50px;
        font-family: 'High Tower Text';
        font-size: 20px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        font-size: 30px;
    }

    .tdnmk {
        font-size: 20px;
    }

    img {
        width: 100%;
        height: 99vh;
    }

    input {
        padding: 3px 0px;
        border-radius: 5px;
        font-size: 18px;
        text-align: center;
        margin-left: 5px;
    }

    .btnLogin {
        padding: 10px 50px;
        font-size: 21px;
        background-color: black;
        color: white;
        transition: background-color 0.6s ease;
        border-radius: 50px;
        cursor: pointer;
    }

        .btnLogin:hover {
            background-color: white;
            color: black;
        }

    .checkkno {
        color: red;
        font-size: 23px;
        font-weight: 900
    }

    
</style>

<img src="~/Images/Slider/3.jpg" />
<div>
    <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
    <table align="center">
        <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN XMFASHION</h2>
        @using (Html.BeginForm("DangKy", "User"))
        {
            @Html.ValidationSummary(true)
            <tr>
                <td colspan="2" style="text-align: center; color: red; ">@ViewData["err1"] @ViewData["err2"] @ViewData["err3"] @ViewData["err4"] @ViewData["err5"] @ViewData["err6"] @ViewData["err7"]</td>
            </tr>
            <tr>
                <td class="tdnmk">Họ tên:</td>
                <td>@Html.TextBox("HoTen") <span class="checkkno"> @ViewData["err8"]</span></td>

            </tr>
            <tr>
                <td class="tdnmk">Tên đăng nhập:</td>
                <td>@Html.TextBox("TaiKhoan")  <span class="checkkno"> @ViewData["err9"]</span></td>
            </tr>
            <tr>
                <td class="tdnmk">Mật khẩu:</td>
                <td>@*@Html.Password("MatKhau")*@ <input type="password"  name="MatKhau" minlength="8" required> <span class="checkkno"> @ViewData["err10"]</span></td>
            </tr>

            <tr>
                <td class="tdnmk">Mật khẩu nhập lại:</td>
                <td>@Html.Password("MatKhauNL") <span class="checkkno"> @ViewData["err11"] </span></td>
            </tr>
            <tr>
                <td class="tdnmk">Email:</td>
                <td>@*@Html.TextBox("Email")*@ <input type="email" name="Email" required> <span class="checkkno"> @ViewData["err12"]</span></td>
            </tr>
            <tr>
                <td class="tdnmk">Điện thoại:</td>
                <td>@Html.TextBox("DienThoai") <span class="checkkno"> @ViewData["err13"]</span></td>
            </tr>
            <tr>
                <td class="tdnmk">Ngày sinh:</td>
                <td><input type="date" name="NgaySinh" /></td>
            </tr>
            <tr>
                <td class="tdnmk">Địa chỉ:</td>
                <td><input type="text" name="DiaChi" /></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input class="btnLogin" type="submit" value="Đăng ký" />

                </td>
                <td style=" text-decoration: none; font-size: 17px"><a href="~/User/DangNhap">Đăng nhập</a></td>
            </tr>

        }
    </table>

</div>

