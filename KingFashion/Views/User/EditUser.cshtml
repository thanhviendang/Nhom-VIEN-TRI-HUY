@model KingFashion.Models.KHACHHANG

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}

<h2>EditUser</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>KHACHHANG</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @*  @Html.HiddenFor(model => model.MaKH)*@
     <div class="form-group" style="display: none">
            <label class="control-label col-md-2">Mã khách hàng:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaKH" value="@Model.MaKH" hidden readonly />
            </div>
        </div>
    <div class="form-group">
        <label class="control-label col-md-2">Họ Tên:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sHoten" value="@Model.HoTen" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">
            <input type="email" size="70" name="sEmail" value="@Model.Email" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Điện thoại:</label>
        <div class="col-md-10">
            <input type="tel" size="70" name="sDienThoai" value="@Model.DienThoai" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày sinh:</label>
        <div class="col-md-10">
            <input type="date" name="dNgaySinh" required value="@Convert.ToDateTime(Model.NgaySinh)" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tài khoản:</label>
        <div class="col-md-10">
            <input type="text" name="sTaiKhoan" readonly value="@Model.TaiKhoan" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu:</label>
        <div class="col-md-10">
            <input type="text" name="sMatKhau" value="@Model.MatKhau" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back", "DetailsUser", new { id = Model.MaKH })
</div>
