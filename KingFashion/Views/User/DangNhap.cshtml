@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            margin: 0px;
            padding: 0px;
        }

        div {
            padding: 20px 20px;
            position: absolute;
            top: 20%;
            left: 25%;
            right: 25%;
            bottom: 20%;
            background-color: rgba(255, 255, 255, 0.662);
            border-radius: 50px;
            font-family: 'High Tower Text';
            font-size: 20px;
        }

        h2 {
           
            text-align: center;
            font-weight: bold;
            font-size: 30px;
        }
        .tdnmk {
            font-size: 23px;
       
        }
        img {
            width: 100%;
            height: 99vh;
        }
        input{
            padding: 5px 0px;
            border-radius: 5px;
            font-size: 20px;
            text-align: center;
            margin-left: 5px;
        }
        .btnLogin {
            padding: 10px 50px;
            font-size: 21px;
            background-color: black;
            color: white;
            transition: background-color 0.6s ease;
            border-radius: 50px;
            cursor: pointer;
        }
            .btnLogin:hover {
                background-color: white;
                color: black;
            }
    </style>

</head>
<body>
    <img src="~/Images/Slider/3.jpg" />
    <div >
        <h2>KING FASHION LOGIN</h2>
        <table align="center">
            <th colspan="2" style="color:red; text-align:center; left: 50%">@ViewBag.ThongBao</th>
            <tr style="height: 5px;"></tr>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr>
                    <td class="tdnmk">Tên đăng nhập</td>
                    <td>
                        @Html.TextBox("TaiKhoan")
                        @ViewData["Err1"]
                    </td>
                </tr>
                <tr style="height: 10px;"></tr>
                <tr>
                    <td class="tdnmk">Mật khẩu</td>
                    <td>
                        @Html.Password("MatKhau")
                        @ViewBag.Err2
                    </td>
                </tr>
                <tr style="height: 20px;"></tr>
                <tr>
                  
                 
                    <td colspan="2" style="text-align: center">
                        <input class="btnLogin" type="submit" value="Đăng nhập" />
                    </td>
                </tr><tr style="height: 10px;"></tr>
                     <tr>
                         <td style=" text-decoration: none; font-size: 17px"><a href="~/User/DangKy">Đăng ký</a></td>

                         <td style="float: right; text-decoration: none; font-size: 17px"><a href="~/KingFashion/Index">Quay lại trang chủ</a></td>
                     </tr>
                
            }
        </table>
    </div>


</body>
</html>
