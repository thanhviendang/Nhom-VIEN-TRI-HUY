@model KingFashion.Models.CHUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CHUDE</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaCd)

<div class="form-group">
    <label class="control-label col-md-2">Mã Chủ Đề:</label>
    <div class="col-md-10">
        <input type="text" size="70" name="iMaCD" value="@Model.MaCd" readonly />
    </div>
</div>
    <div class="form-group">
        <label class="control-label col-md-2">Tên Chủ Đề</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenCD" value="@Model.TenChuDe" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
