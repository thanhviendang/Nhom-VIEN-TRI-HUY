@model KingFashion.Models.ADMIN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ADMIN</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaAd)
    <div class="form-group">
        <label class="control-label col-md-2">Mã:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="iMaAd" value="@Model.MaAd" readonly />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Họ Tên:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sHoten" value="@Model.HoTen" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Điện thoại:</label>
        <div class="col-md-10">
            <input type="tel" size="70" name="sDienThoai" value="@Model.DienThoai" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày sinh:</label>
        <div class="col-md-10">
            <input type="date" name="dNgaySinh" required value="@Convert.ToDateTime(Model.NgaySinh)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">
            <input type="email" size="70" name="sEmail" value="@Model.Email" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên đăng nhập:</label>
        <div class="col-md-10">
            <input type="text" name="sTaiKhoan" value="@Model.TenDN" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu:</label>
        <div class="col-md-10">
            <input type="text" name="sMatKhau" value="@Model.MatKhau" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Quyền</label>
        <div class="col-md-10">
            <input type="number" name="sQuyen" value="@Model.Quyen" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Chức vụ</label>
        <div class="col-md-10">
            <input type="text" name="sChucVu" value="@Model.ChucVu" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
