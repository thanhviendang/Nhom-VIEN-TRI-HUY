@model KingFashion.Models.ADMIN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ADMIN</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Họ tên:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sHoTen" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Điện thại:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDienThoai" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày sinh:</label>
        <div class="col-md-10">
            <input type="date" size="70" name="dNgaySinh" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">
            <input type="email" size="70" name="sEmail" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên đăng nhập:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenDn" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Mật khẩu:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sMatkhau" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Quyền:</label>
        <div class="col-md-10">
            <input type="number" min="1" size="70" name="sQuyen" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Chức vụ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sChucVu" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
