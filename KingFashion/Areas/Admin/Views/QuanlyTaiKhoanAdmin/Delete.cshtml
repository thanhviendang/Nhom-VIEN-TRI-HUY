@model KingFashion.Models.ADMIN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tài khoản @Html.DisplayFor(model => model.HoTen)</h2>

<h3>Are you sure you want to delete this?</h3>
<p style="color: red">@ViewBag.ThongBao</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt>
            Địa chỉ:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt>
            Điện thoại:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
        <dt>
            Ngày sinh:
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.NgaySinh)*@
            @Html.FormatValue(@Model.NgaySinh, "{0:dd/MM/yyyy}")
        </dd>
        <dt>
            Email:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Tên đăng nhập:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenDN)
        </dd>
        <dt>
            Mật khẩu:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt>
            Quyền:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quyen)
        </dd>
        <dt>
            Chức vụ:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
