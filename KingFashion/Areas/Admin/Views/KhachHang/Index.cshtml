@model IEnumerable<KingFashion.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý thông tin khách hàng</h2>
<h4>Tổng số tài khoản : @Model.Count()</h4>

<table class="table">
    <tr>
        <th>Mã khách hàng</th>
        <th>Họ tên</th>
        <th>Email</th>
        <th>Địa chỉ </th>
        <th>Điện thoại</th>
        <th>Ngày sinh</th>
        <th>Tài khoản</th>
        <th>Mật khẩu</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaKH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DienThoai)
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.NgaySinh)*@
        @Html.FormatValue(item.NgaySinh, "{0:dd/MM/yyyy}")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TaiKhoan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MatKhau)
    </td>
    <td>
        @*<a href="@Url.Action("Edit",new { id = item.MaKH })" class="btn btn-warning" role="button">Sửa</a>*@
        <a href="@Url.Action("Details",new { id = item.MaKH })" class="btn btn-primary" role="button">Chi tiết</a>
        <a href="@Url.Action("Delete",new { id = item.MaKH })" class="btn btn-danger" role="button">Xóa</a>
    </td>
</tr>
}

</table>
