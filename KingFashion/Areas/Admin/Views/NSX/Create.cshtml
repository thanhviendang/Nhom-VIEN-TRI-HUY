@model KingFashion.Models.NHASANXUAT
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>THÊM NHÀ SẢN XUẤT</h2>

@using (Html.BeginForm("Create", "NSX", FormMethod.Post, new
{
    @enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Tên nhà sản xuất</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenNSX" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Điện Thoại</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDienThoai" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to list", "Index")
</div>